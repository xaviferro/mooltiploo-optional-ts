{
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "verbose": true,
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(ts|js)x?$",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "coverageThreshold": {
        "global": {
          "branches": 80,
          "functions": 80,
          "lines": 80,
          "statements": -10
        }
    },
    "collectCoverageFrom": [
        "src/**/*.{ts,js}",
        "!test/**/*.{ts,js}"
    ],
    "coverageDirectory" : "coverage/"
}
